<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RiemannWeb</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/animatecss/animate.css" />
</head>
<body>
    <header class="animated fadeInDown">
        <nav class="navbar navbar-light border-bottom box-shadow mb-3">
            <div class="container content">
                <a class="navbar-brand" onclick="transitionOut('/')">RiemannWeb</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" onclick="transitionOut('/')">Settings</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="content">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted animated fadeInUp">
        <div class="content">
            &copy; 2019 - RiemannWeb - <a class="link-color" onclick="transitionOut('terms')">Privacy and Terms</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
