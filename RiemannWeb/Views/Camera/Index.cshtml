@{
    ViewData["Title"] = "Index";
}

<script type="text/javascript" src="~/js/app.js"></script>

<div class="fullscreen bg-light">
    <canvas id="canvas" class="capture"></canvas>
    <video id="video" class="capture" playsinline autoplay></video>

    <span id="errorMsg"></span>

    <div id="controls" class="bg-light">
        <input id="snapButton" class="button btn btn-info" onclick="snap()" type="button" value="Capture" />
        <label class="button btn btn-light border-bottom"><span class="btn">Upload</span><input type="file" accept="image/*" capture="capture" style="display: none;"></label>
    </div>

    <div id="help" class="bg-light">
        <h1>Help</h1>
        <h2>I'm Getting an Error</h2>
        <p>We apologize for the inconvinience that the site does not function on your device. Please attempt to use the "Upload" option instead. If on mobile, this button will automatically activate your camera and you can proceed normally.</p>
        <br />
        <h2>Usage</h2>
        <p>Further operation not possible yet.</p>
        <br />
    </div>
    <input id="helpButton" class="button btn btn-info" onclick="helpToggle()" type="button" value="Help" />
</div>
